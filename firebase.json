{
  "hosting": {
    "public": "./functions/app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "destination": "app/sitemap.xml"
      },
      {
        "source": "**",
        "function": "index"
      }
    ]
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\"/app run build", "npm --prefix \"$RESOURCE_DIR\" run build"]
  }
}
